{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":semanticCommitTypeAll(build)"
  ],
  "postUpdateOptions": ["gomodTidy"],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "pinDigests": true,
      "versioning": "github-actions"
    }
  ],
  "docker-compose": {
    "managerFilePatterns": [
    "/(^|/).*(?:docker-)?compose[^/]*\\.ya?ml$/"
  ]
  }
}
